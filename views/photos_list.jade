doctype html
html 
	head
		title photos
	body#photos
		.uk-grid.uk-margin-left.uk-margin-right(v-infinite-scroll="fetchPhotos()", infinite-scroll-disabled="disable_infinite_scrolling")
			div.uk-width-medium-1-3(v-for='photo in photos')
				.uk-panel.uk-panel-box.uk-panel-header.uk-margin-top
					.uk-width-1-1
						img.img-preview(:src = 'photo.filename', width= '150', height= '150')
					.uk-width-1-1.uk-margin-top
						span Latitude: {{photo.latitude.substring(0, 5) + photo.latitudeRef}}
					.uk-width-1-1.uk-margin-top
						span Longitude: {{photo.longitude.substring(0, 5) + photo.longitudeRef}}
					.uk-width-1-1.uk-margin-top
						span Altitude: {{photo.altitude.substring(0, 5)}}
					.uk-width-1-1.uk-margin-top
						span DateTime: {{photo.dateTime}}
		template(v-if="all_loaded")
			#alert-wrapper.uk-animation-fade.uk-animation-reverse
				.uk-alert.uk-alert-warning(data-uk-alert)
					a.uk-alert-close.uk-close(href="")
					span all photos have been loaded
		.uk-overlay-panel.uk-vertical-align.uk-overlay-background(:class="overlay ? '' : 'uk-hidden'")
			.uk-vertical-align-middle.uk-text-center.uk-width-1-1
				i.uk-icon-spinner.uk-icon-spin.uk-icon-large
		script(src= 'public/jquery-2.2.4.min.js')
		script(src= 'public/uikit.min.js')
		script(src= 'photos.js')
